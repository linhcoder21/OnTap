<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Hello, world!</title>

</head>
<body>


<form method="post" action="/insertUser" enctype="application/x-www-form-urlencoded">

  <input name="email" placeholder="Nhap email cua ban" required><br><br>
  <input name="firstname" placeholder="Nhap firstname cua ban"required><br><br>
  <input name="lastname" placeholder="Nhap lastname cua ban" required><br><br>
  <input name="password" placeholder="Nhap password cua ban" required><br><br>
  <button type="submit">Save</button>

</form>

<div>============================================</div>

<% if (typeof message != 'undefined') { %>
  <h1><%= message %></h1>
  <% } %>

<% if (typeof data != 'undefined') { %>

    <%for(var i=0; i< data.length; i++) { %>
       <div><%= data[i]._id %></div>
       <div><%= data[i].email %></div>
       <div><%= data[i].firstName %></div>
       <div><%= data[i].lastName %></div>
       <div><%= data[i].password %></div>

<!--           form xoa-->
           <form method="get" action="/xoa">
               <input name="id" value="<%= data[i]._id%> " hidden>
               <button type="submit">Delete</button>
           </form>


<!--           form sua-->
           <form method="get" action="/sua">
               <input name="id" value="<%= data[i]._id%> " hidden>
               <button type="submit">Update</button>
           </form>

        <div>=========================================</div>

     <% } %>
<% } %>









